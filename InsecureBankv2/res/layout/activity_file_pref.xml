<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.insecurebankv2.FilePrefActivity$PlaceholderFragment" >


    <TextView
        android:id="@+id/textview_serverip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/server_ip"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edittext_serverip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textview_serverip"
        android:layout_below="@+id/textview_serverip"
        android:ems="10"
        android:text="10.0.2.2"
        android:inputType="text" />

    <TextView
        android:id="@+id/textview_serverport"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edittext_serverip"
        android:layout_below="@+id/edittext_serverip"
        android:layout_marginTop="14dp"
        android:text="@string/server_port"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edittext_serverport"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textview_serverport"
        android:layout_below="@+id/textview_serverport"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:text="8888"
        android:inputType="text" >

        <requestFocus />
    </EditText>

       <Button
           android:id="@+id/submitPref_button"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignLeft="@+id/edittext_serverport"
           android:layout_below="@+id/edittext_serverport"
           android:layout_marginTop="74dp"
           android:text="Submit" />

</RelativeLayout>